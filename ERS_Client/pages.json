        "enablePullDownRefresh": true
      }
    },
    {
      "path": "pages/myApply/myApply",
      "style": {
        "navigationBarTitleText": "我的申请",
        "enablePullDownRefresh": true,
        "navigationStyle": "default"
      }
    },
    {
      "path": "pages/test/test",
      "style": {
        "navigationBarTitleText": "测试",
        "enablePullDownRefresh": true,
